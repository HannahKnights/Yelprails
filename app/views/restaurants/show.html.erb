<%= @restaurant.name %>
<%= @restaurant.description %>
<%= @restaurant.address %>

<%= image_tag @restaurant.url %>

<%= link_to 'Edit restaurant', edit_restaurant_path(@restaurant) %>
<%= link_to 'Delete restaurant', restaurant_path(@restaurant), :method => :delete, data: { :confirm => 'Are you sure you want to delete this restaurant?'} %>

<%= render 'review_display', restaurant: @restaurant %>

<div id='map'>
</div>
<script>
var map = new GMaps({
  div: '#map',
  lat: <%= @restaurant.latitude %>,
  lng: <%= @restaurant.longitude %>
});

map.addMarker({
  lat: <%= @restaurant.latitude %>,
  lng: <%= @restaurant.longitude %>,
  title: 'Lima',
  click: function(e) {
  },
    infoWindow: {
    content: '<p></p>'
    }
});



</script>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant)%>
<%= link_to 'Back to Restaurants', restaurants_path %>
