<h2>Reviews</h2>
<% if restaurant.reviews != [] %>
  <% restaurant.reviews.each do |review| %>
    <%= review.content %>
    <%= review.rating %>
    <%= review.user.email %>
    <%= link_to 'Edit review', edit_restaurant_review_path(restaurant, review) %>
    <%= link_to 'Delete review', restaurant_review_path(restaurant, review), :method => :delete, data: { :confirm => 'Are you sure you want to delete this restaurant?'} %>
  <% end %>
<% else %>
  <h3>Be the first person to add a review!</h3>
<% end %>